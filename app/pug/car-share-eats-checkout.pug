extends layouts/main
include /partials/sidebar
include /partials/choose-location-popup
include /partials/rate-popup

block variables
  - const title = 'Eats'

block content
  .car-share-eats-page
    +choose-location-popup()
    +rate-popup({image:'images/marketplace/products/product-1.jpg', title:'Rate this product?', review:true, skip:true, done:true})

    .car-share-eats-page__sidebar
      +sidebar({navActive:'carShare', innerNavigation:'eats'})

    .car-share-eats-page__container
      include /pages/car-share-eats/header
      .car-share-eats-page__wrap
        .car-share-eats-page__row
          .car-share-eats-page__left
            div(data-simplebar class="custom-scroll car-share-eats-page__box")
              include /pages/car-share-eats/checkout-form
          .car-share-eats-page__right
            div(data-simplebar class="custom-scroll car-share-eats-page__box")
              include /pages/car-share-eats/cart-total

    include /pages/car-share/mobile-footer
