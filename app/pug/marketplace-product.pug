extends layouts/main
include /partials/sidebar
include /partials/choose-location-popup
include /partials/rate-popup

block variables
  - const title = 'Marketplace'
  - const tabName = 'marketplace'

block content
  .marketplace-page
    +choose-location-popup()
    +rate-popup({image:'images/marketplace/products/product-1.jpg', title:'Rate this product?', review:true, skip:true, done:true})
    .marketplace-page__sidebar
      +sidebar({navActive:'marketplace'})

    .marketplace-page__container
      include /pages/marketplace/header
      .marketplace-page__wrap
        .marketplace-page__menu
          include /pages/marketplace/menu
        .marketplace-page__content
          div(data-simplebar class="custom-scroll marketplace-page__box")
            include /pages/marketplace/product/product

    include /pages/marketplace/mobile-footer
