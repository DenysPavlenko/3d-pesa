extends layouts/main
include /partials/country-select
include /partials/state-select
include /partials/input
include /partials/button

block variables
  - var title = 'Welcome to athiopian'

block content
  .start-page
    .start-page__navigation
      .start-page__navigation-circle
        +icon('chevron-left', 'svg-icon--stroke-light start-page__navigation-icon')
      h5.text-muted.text-uppercase.start-page__navigation-title Dashboard

    .start-page__container
      .start-page__content
        .start-page__content-box
          div(data-simplebar class="custom-scroll start-page__content-scroll")
            form.form
              .form__line
                h2 Welcome to Ã†thiopian
              .form__line
                p.text-muted Confirm your location to find our shops nearby
              .form__line
                .form-group
                  .form-group__header
                    label.p Country
                  +country-select()
              .form__line
                .row
                  .col-7
                    .form-group
                      .form-group__header
                        label.p State/Province
                      +state-select()
                  .col-5
                    .form-group
                      .form-group__header
                        label.p Zip code
                      +input()(type="number" placeholder="0000")
              .form__line
                .form-group
                  .form-group__header
                    label.p City
                  +input()(type="text" placeholder="Your city")
              .form__line
                .form-group
                  .button-group.button-group--fluid
                    +button({type:'bordered', size:'xl', classes:'button-group__button'})(type="button")| Skip
                    +button({size:'xl', classes:'button-group__button'})(type="button")| Continue

      .start-page__image
        .start-page__image-box
          img(src="images/permissions/permission-success-image.svg" alt="permission")
