include /partials/contact
include /partials/close

mixin contact-popup(props = {})

  .popup.modal(data-popup="contact-popup")
    .popup__header-offset
    .popup__header
      .content-header.content-header--md-border-0
        .content-header__center
          h3 User profile
        .content-header__right.content-header__right--md-left
          +close({mdLight:true})(data-popup-close="contact-popup")

    .popup__body
      +contact()
