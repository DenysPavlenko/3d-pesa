include /partials/date-picker-dropdown
include /partials/time-picker-dropdown
include /partials/timezone-picker
include /partials/select
include /partials/avatar
include /partials/close
include /partials/added-user
include /partials/description-box
include /partials/input
include /partials/button

.calendar-options

  .calendar-options__option
    .calendar-option
      .calendar-option__icon
        +icon('clock', 'svg-icon--muted')(width="20" height="20")
      .calendar-option__content
        .event-schedule
          .event-schedule__group.event-schedule__group--with-line
            .event-schedule__item
              +date-picker-dropdown()
            .event-schedule__item
              +time-picker-dropdown()
          .event-schedule__group
            .event-schedule__item
              +date-picker-dropdown()
            .event-schedule__item
              +time-picker-dropdown()
          .event-schedule__group
            .event-schedule__item
              +timezone-picker()

  .calendar-options__option
    .calendar-option
      .calendar-option__icon.calendar-option__icon--center
        +icon('users', 'svg-icon--muted')(width="20" height="12")
      .calendar-option__content
        +input({type:'transparent'})(type="text" placeholder="Add users")

  .calendar-options__option
    .calendar-option
      .column-group.column-group--sm
        +times(2)
          .column-group__item
            +added-user()

  .calendar-options__option
    .calendar-option
      .calendar-option__icon.calendar-option__icon--center
        +icon('pin', 'svg-icon--muted')(width="16" height="20")
      .calendar-option__content
        +input({type:'transparent'})(type="text" placeholder="Add location")

  .calendar-options__option
    .calendar-option
      .calendar-option__icon.calendar-option__icon--center
        +icon('bell', 'svg-icon--muted')(width="14" height="18")
      .calendar-option__content
        +select({
          modifiers:'select--inline select--left',
          label:{name:'10 minutes before', selected:true},
          options:[
            {name:'5 minutes before'},
            {name:'10 minutes before'},
            {name:'15 minutes before'},
            {name:'30 minutes before'},
            {name:'1 hour before'},
            {name:'1 day before'},
          ]
        })

  .calendar-options__option
    .calendar-option
      .calendar-option__icon
        +icon('description', 'svg-icon--muted')(width="18" height="15")
      .calendar-option__content
        +description-box()

  .calendar-options__option
    .calendar-option.calendar-option--end
      +button()(type="button" class="button")| Save
