include /partials/close
include /partials/input

mixin calendar-popup(props = {})
  .popup.popup--mw-560.modal.calendar-popup(data-popup="calendar-popup")

    .d-block.d-sm-none
      .popup__header-offset
      .popup__header
        .content-header.content-header--md-border-0
          .content-header__center
            h3 New event
          .content-header__right.content-header__right--md-left
            +close({mdLight:true})(data-popup-close="calendar-popup")

    .d-none.d-sm-block
      .popup__close
        +close({mdLight:true})(data-popup-close="calendar-popup")

    .calendar-popup__body
      .calendar-popup__body-top
        .calendar-popup__input
          .form-group
            .form-group__header
              label.p Title
            +input()(type="text" placeholder="Add title")

        .calendar-popup__tabs.js-tabs
          .h4.calendar-popup__tab.js-tab.is-active(data-tab="event") Event
          .h4.calendar-popup__tab.js-tab(data-tab="reminder") Reminder
          .h4.calendar-popup__tab.js-tab(data-tab="task") Task

      .js-tab-content.calendar-popup__content(data-content="event")
        include ./new-event
      .js-tab-content.calendar-popup__content(data-content="reminder")
        include ./new-reminder
      .js-tab-content.calendar-popup__content(data-content="task")
        include ./new-task
