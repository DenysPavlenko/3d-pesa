include /partials/close
include /partials/checkbox
include /partials/button

mixin advertisement-popup(props = {})

  .popup.modal(data-popup="advertisement-popup")

    .popup__header-offset
    .popup__header
      .content-header.content-header--md-border-0
        .content-header__center
          h3 Advertisement
        .content-header__right.content-header__right--md-left
          +close({mdLight:true})(data-popup-close="advertisement-popup")

    .popup__body
      form.form
        .form__line
          +checkbox({label:'Car', start:true})
        .form__line
          +checkbox({label:'Hardware', start:true})
        .form__line
          +checkbox({label:'Movie', start:true, checked:true})
        .form__line
          +checkbox({label:'Marketing', start:true, checked:true})
        .form__line
          +checkbox({label:'Software', start:true, checked:true})
        .form__line
          +checkbox({label:'Design', start:true, checked:true})
        .form__line
          +button({fluid:true, size:'xl'})(type="button")| Apply
