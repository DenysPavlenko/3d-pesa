include /partials/select
include /partials/close
include /partials/input
include /partials/button

mixin send-popup(props = {})

  .popup.modal(data-popup="send-popup")

    .popup__header-offset
    .popup__header
      .content-header.content-header--md-border-0
        .content-header__center
          h3 Send
        .content-header__right.content-header__right--md-left
          +close({mdLight:true})(data-popup-close="send-popup")

    .popup__body
      form.form
        .form__line
          .form-group
            .form-group__header
              label.p Recipient
            .input-group.input-group--bg-secondary
              .input-group__prepend
                .input-group__wrap
                  +icon('person', 'svg-icon--muted')(width="17" height="18")
              +input({bg:'secondary', classes:'input-group__input'})(type="email" placeholder="Email address")
              .input-group__append
                .input-group__wrap(data-popup-open="qr-code-popup")
                  +icon('qr-code', 'svg-icon--light cursor-pointer')(width="18" height="18")
        .form__line
          .form-group
            .form-group__header
              label.p Currency
            +select({
              label:{name:'GCN', selected:true, image:'images/icons/l-coin.svg', right:'<p>0.1245125 GCN</p><p class="text-muted">$15455.2</p>'},
              options:[
                {name:'LCN', image:'images/icons/l-coin.svg', right:'<p>0.1245125 LCN</p><p class="text-muted">$15455.2</p>'},
                {name:'GCN', image:'images/icons/g-coin.svg', right:'<p>0.1245125 GCN</p>'},
                {name:'BCN', image:'images/icons/g-coin.svg', right:'<p>0.1245125 BCN</p><p class="text-muted">$15455.2</p>'},
              ]
            })
        .form__line
          .form-group
            .form-group__header
              label.p Amount
          .form-exchange
            .form-exchange__input
              .input-group.input-group--bg-secondary
                +input({classes:'input-group__input'})(type="number" value="1")
                .input-group__append
                  .input-group__wrap
                    .row-group.row-group--xs.row-group--align-center
                      .row-group__item
                        img(src="images/icons/g-coin.svg", alt="g-coin")
                      .row-group__item
                        h5.text-muted.text-uppercase GCN
            .form-exchange__icon
              +icon('exchange', 'svg-icon--muted')(width="24" height="17")
            .form-exchange__input
              .input-group.input-group--bg-secondary
                +input({classes:'input-group__input'})(type="number" value="124.54")
                .input-group__append
                  .input-group__wrap
                    h5.text-muted USD
        .form__line
          +button({size:'xl', fluid:true})(type="submit")| Send Funds
