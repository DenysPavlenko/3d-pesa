include /partials/input

mixin search-input(props = {})
  -const { placeholder, bg } = props
  -
    const classnames = classNames({
      'input-group': true,
      [`input-group--bg-${bg}`]: bg,
    })

  div(class=classnames)
    .input-group__prepend
      .input-group__wrap
        +icon('search', 'svg-icon--muted')(width="18" height="18")
    +input({bg:bg, classes:'input-group__input'})(type="text" placeholder=placeholder)
