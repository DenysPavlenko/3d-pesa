include /partials/close
include /partials/stepper

mixin tracking-popup(props = {})

  .popup.popup--mw-560.modal(data-popup="tracking-popup")
    .popup__header-offset
    .popup__header
      .content-header.content-header--md-border-0
        .content-header__center
          h3 Tracking
        .content-header__right.content-header__right--md-left
          +close({mdLight:true})(data-popup-close="tracking-popup")

    .popup__body
      .list-group
        .list-group__item
          .column-group.column-group--xs
            .column-group__item
              p
                span.icon-inline
                  +icon('lorri', 'svg-icon--light')(width="22" height="16")
                span Estimate Delivery Time: May 16, 2020 - May 23, 2020
            .column-group__item
              p Delivery service: FedEx
            .column-group__item
              p
                span Tracking number: RO515835525415
                span.icon-inline
                  +icon('copy', 'svg-icon--light')(width="11" height="14")
        .list-group__item
          .column-group.column-group--sm
            .column-group__item
              +stepper()
            .column-group__item
              p Accepted: <br/>2020-06-16 10:30 PM
        .list-group__item
          .column-group.column-group--sm
            .column-group__item
              h4 Ship to:
            .column-group__item
              p John Doe <br/>
                | Franklin Street, 12 <br/>
                | New York, California, 12612 <br/>
                | Unitaed States of America
