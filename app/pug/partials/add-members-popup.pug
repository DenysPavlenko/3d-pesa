include /partials/contact-item
include /partials/close
include /partials/input
include /partials/button

mixin add-members-popup(props = {})

  .popup.modal.add-members-popup(data-popup="add-members-popup")
    .popup__header-offset
    .popup__header
      .content-header.content-header--md-border-0
        .content-header__center
          h3 Add members
        .content-header__right.content-header__right--md-left
          +close({mdLight:true})

    .popup__body.add-members-popup__body

      .add-members-popup__search
        .input-group.input-group--bg-secondary
          .input-group__prepend
            .input-group__wrap
              +icon('search', 'svg-icon--muted')(width="18" height="18")
          +input({classes:'input-group__input', bg:'secondary',})(type="text", placeholder="Search for contacts")

      .add-members-popup__list
        div(data-simplebar class="custom-scroll")
          .select-list
            -var cnt = 0
            while cnt < 10
              .select-list__item
                +contact-item()
              -cnt++

      .add-members-popup__footer
        .button-group.button-group--fluid
          +button({type:'bordered', fluid:true, size:'xl', classes:'button-group__button'})(type="button" data-popup-close="add-members-popup")| Cancel
          +button({type:'white', fluid:true, size:'xl', classes:'button-group__button'})(href="social-app-chat-group.html")| Create
