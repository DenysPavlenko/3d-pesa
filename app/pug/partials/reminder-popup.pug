include /partials/close
include /partials/button

mixin reminder-popup(props = {})
  .popup.modal(data-popup="reminder-popup")

    .d-block.d-md-none
      .popup__header-offset
      .popup__header
        .content-header.content-header--md-border-0
          .content-header__left
            +close({mdLight:true})(data-popup-close="task-popup")
          .content-header__center
            h3 Reminder
          .content-header__right
            .row-group.row-group--md.row-group--align-center
              .row-group__item(data-popup-open="calendar-popup")
                +icon('edit', 'svg-icon--muted')(width="21" height="21")
              .row-group__item
                +icon('trash-can', 'svg-icon--muted')(width="18" height="19")

    .d-none.d-md-block
      .content-header.content-header--border-0
        .content-header__left
          h3 Pay taxes
        .content-header__right
          .row-group.row-group--md.row-group--align-center
            .row-group__item(data-popup-open="calendar-popup")
              +icon('edit', 'svg-icon--muted svg-icon--hover-light')(width="21" height="21")
            .row-group__item
              +icon('trash-can', 'svg-icon--muted svg-icon--hover-light')(width="18" height="19")
            .row-group__item
              +close()(data-popup-close="task-popup")

    .popup__body
      .calendar-options
        .calendar-options__option
          .calendar-option
            .calendar-option__icon
              +icon('clock', 'svg-icon--muted')(width="20" height="20")
            .calendar-option__content
              .column-group.column-group--xs
                .column-group__item
                  p Suturday, Mar 19, 2020
                .column-group__item
                  p.text-muted 8 PM

        .calendar-options__option
          .calendar-option.calendar-option--end
            +button({type:'bordered'})(type="button")| Mark as completed
