include /partials/burger
include /partials/select
include /partials/notifications-dropdown
include /partials/user-dropdown
include /partials/search-input
include /partials/cart-dropdown

.header
  .header__wrap
    .header__left
      .header__burger
        +burger({classes:'js-burger'})

      .header__title
        h3 #{heading}

      .header__logo
        .header__logo-icon
          img(src="images/logo.svg", alt="logo.svg")
        span.header__logo-title 3D-Pesa

    .header__center
      include ./menu-tabs

    .header__right
      .header__dropdowns
        .header__dropdown
          +select({
            modifiers:'select--inline',
            label:{name:'Shop 1', selected:true},
            options:[
              {name:'Shop 1'},
              {name:'Shop 2'},
              {name:'Shop 3'},
              {name:'Shop 4'},
              {name:'Shop 5'},
            ]
          })
        .header__dropdown
          +notifications-dropdown()
        .header__dropdown
          +user-dropdown()
