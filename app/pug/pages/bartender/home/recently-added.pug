include /partials/catalog-header
include /partials/slider-arrows
include /partials/see-all
include /partials/shop-card
include /partials/user-badge
include /partials/chip
-
  var products = [
    {link:'bartender-product.html', image: 'images/bartender/products/product-1.jpg', title: 'Carrot', price:'12 L/\Kg'},
    {link:'bartender-product.html', image: 'images/bartender/products/product-1.jpg', title: 'Carrot', price:'12 L/\Kg'},
    {link:'bartender-product.html', image: 'images/bartender/products/product-1.jpg', title: 'Carrot', price:'12 L/\Kg'},
    {link:'bartender-product.html', image: 'images/bartender/products/product-1.jpg', title: 'Carrot', price:'12 L/\Kg'},
  ]

.catalog
  .catalog__header
    +catalog-header({
      left: `<h3>Recently added</h3>`,
      right: {partial:'see-all', params:{link:'bartender-category.html'}}
    })
  .catalog-slider
    .catalog-slider__arrows
      +slider-arrows({prev: 'js-catalog-slider-prev', next: 'js-catalog-slider-next'})
    .catalog-slider__slides.js-catalog-slider
      +times(2)
        each product in products
          .catalog-slider__slide
            +shop-card({
              link:product.link,
              image:product.image,
              content:[
                `<p class="p-xl">${product.title}</p>`,
                `<h3>${product.price}</h3>`,
                {partial:'chip', params:{title:'Barter only', color:'green'}},
                {partial:'user-badge', params:{badgeSize:'sm', avatarSize:'xs', name:'<p>Rachel Cole</p>'}},
              ]
            })
