include /partials/avatar
include /partials/call-action

.call-screen
  div(data-simplebar class="custom-scroll")
    .call-screen__wrap
      .call-screen__top
        .column-group.column-group--sm.column-group--align-center
          .column-group__item
            +avatar({image:'images/set-avatar/set-avatar-image.svg', size:'lg'})
          .column-group__item
            h3 John Doe
          .column-group__item
            p.text-uppercase.text-muted DIALING

      .call-screen__bottom
        .call-screen__actions
          .call-screen__action
            +call-action({icon:{name:'phone-horizontal', width:'30', height:'21'}, title:'Speaker', filled:true, color:'red'})
          a(href="social-app-call-active.html").call-screen__action
            +call-action({icon:{name:'phone-rotated', width:'30', height:'28'}, title:'Accept', filled:true, color:'green'})
