include /partials/select
include /partials/calendar-action

.calendar-full__item-header
  .calendar-header
    .calendar-header__format
      .calendar-header__format-text
        p.p-xs.text-uppercase GMT+3
    .calendar-header__days
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Sun
          a(href="#" class="h3 text-muted calendar-header__day-date") 11
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Mon
          a(href="#" class="h3 text-muted calendar-header__day-date") 12
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Tue
          a(href="#" class="h3 text-muted calendar-header__day-date") 13
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Wed
          a(href="#" class="h3 text-muted calendar-header__day-date") 14
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Thu
          a(href="#" class="h3 text-muted calendar-header__day-date") 15
      .calendar-header__day
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Fri
          a(href="#" class="h3 text-muted calendar-header__day-date") 16
      .calendar-header__day.calendar-header__day--active
        .calendar-header__day-info
          h5.text-muted.calendar-header__day-name Sat
          a(href="#" class="h3 text-muted calendar-header__day-date") 17
        .calendar-header__day-notification
          +calendar-action({icon:{name:'birthday', width:'12', height:'12'}, title:'Frank Jones', color:'purple'})(data-popup-open="event-popup")

