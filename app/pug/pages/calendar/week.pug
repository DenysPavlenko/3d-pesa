          .calendar-table-week__col
          .calendar-table-week__col
          .calendar-table-week__col
          .calendar-table-week__col
          .calendar-table-week__col
            .calendar-table-week__events
              .calendar-table-week__event
                 +calendar-action({icon:{name:'reminder', width:'10', height:'12'}, title:'Pay taxes', color:'blue'})(data-popup-open="reminder-popup")

      .calendar-table-week__row
        .calendar-table-week__time
          .calendar-table-week__time-text
            span.h6.font-regular 3pm
        .calendar-table-week__cols
          .calendar-table-week__col
          .calendar-table-week__col
