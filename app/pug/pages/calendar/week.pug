                +calendar-action({title:'Meeting with John Doe', color:'purple', time:'8 PM - 9 PM'})(data-popup-open="event-popup")
          .calendar-table-week__col
          .calendar-table-week__col
          .calendar-table-week__col

      - var n = 5;
      while n < 12
        .calendar-table-week__row
          .calendar-table-week__time
            .calendar-table-week__time-text
              span.h6.font-regular #{n++}pm
