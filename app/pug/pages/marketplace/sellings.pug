include /partials/catalog-header
include /partials/shop-card
include /partials/star-rating

-
  var products = [
    {link:'marketplace-sellings-product.html', image: 'images/marketplace/products/product-2.jpg', title: 'The Golden Thread: How Fabric Changed History', price:'12G'},
    {link:'marketplace-sellings-product.html', image: 'images/marketplace/products/product-3.jpg', title: 'The Golden Thread: How Fabric Changed History', price:'12G', sold: true},
  ]

.catalog
  .catalog__header
    +catalog-header({
      left: `<h3>Your sellings</h3>`,
    })

  .catalog__items
    each product in products
      .catalog__item
        +shop-card({
          link:product.link,
          image:product.image,
          sold:product.sold,
          content:[
            `<p class="p-xl">${product.title}</p>`,
            {partial: 'star-rating', params:{total:'5.0 (20 ratings)'}},
            `<h3>${product.price}</h3>`,
          ]
        })

