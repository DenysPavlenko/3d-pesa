include /partials/checkout-list
include /partials/verification-popup
include /partials/country-select
include /partials/state-select
include /partials/input
include /partials/textarea
include /partials/button

form.form
  .form__line
    h3 Delivery Address
  .form__line
    .form-group
      .form-group__header
        label.p Country
      +country-select()
  .form__line
    .row
      .col-7
        .form-group
          .form-group__header
            label.p State/Province
        +state-select()
      .col-5
        .form-group
          .form-group__header
            label.p Zip code
          +input()(type="text" placeholder="0000")
  .form__line
    .form-group
      .form-group__header
        label.p City
      +input()(type="text" placeholder="City")
  .form__line
    .form-group
      .form-group__header
        label.p Address
      +input()(type="text" placeholder="Your address")
  .form__line
    .row
      .col-7
        .form-group
          .form-group__header
            label.p Floor
          +input()(type="number" placeholder="Your floor")
      .col-5
        .form-group
          .form-group__header
            label.p Apartment
          +input()(type="text" placeholder="Apartment")
  .form__line
    .form-group
      .form-group__header
        label.p Additional information
      +textarea()(placeholder="Information about your address or an order wishes")
  .form__line
    +checkout-list([
      {item: 'Item(s) total', value: '24 G coins'},
      {item: 'Delivery', value: '2 G coins'},
      {item: 'Order Total', value: '26 G coins', bold:true},
    ])
  .form__line
    +button({size:'xl', fluid:true})(type="button" data-popup-open="verification-popup")| Place your order
