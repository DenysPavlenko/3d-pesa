include /partials/close
include /partials/description-item
include /partials/video-box

mixin time-recorder-video-popup(props = {})

  .popup.popup--mw-800.modal(data-popup="time-recorder-video-popup")

    .popup__close.popup__close--outer
      +close({mdLight:true})(data-popup-close="time-recorder-video-popup")

    .popup__body
      .column-group.column-group--sm
        .column-group__item
          +video-box({video:'https://www.youtube.com/embed/Bw9zSMsKcwk'})
        .column-group__item
          +description-item({
            header:`
              <h3>Samadhi</h3>
              <p class="text-muted">23/07/2020</p>
            `,
            body:[
              `<p class="text-muted">Video by John Doe</p>`,
              `<p class="text-muted">Source: Social Network</p>`,
            ]
          })
